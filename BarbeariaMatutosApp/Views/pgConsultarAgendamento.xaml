<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarbeariaMatutosApp.Views.pgConsultarAgendamento"
             xmlns:viewmodel="clr-namespace:BarbeariaMatutosApp.ViewModels"
             BackgroundColor="#1E1E1E"
             Title="Meus Agendamentos">
    <Grid RowDefinitions="Auto, *">

        <Label Grid.Row="0"
               Text="Histórico de Agendamentos"
               FontSize="24"
               TextColor="White"
               FontAttributes="Bold"
               Margin="20, 20, 20, 10"/>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Agendamentos}"
                        SelectionMode="Single"
                        SelectedItem="{Binding AgendamentoSelecionado}"
                        Margin="10, 0">

            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="CenterAndExpand" IsVisible="{Binding IsBusy}">
                    <ActivityIndicator IsRunning="{Binding IsBusy}" Color="#007bff"/>
                    <Label Text="Carregando agendamentos..."
                           TextColor="#AAAAAA"
                           HorizontalOptions="Center"/>
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="10"
                           Padding="15"
                           Margin="5, 10"
                           BackgroundColor="#2A2A2A"
                           BorderColor="#444444"
                           HasShadow="True">

                        <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="*, Auto" RowSpacing="5">

                            <StackLayout Grid.Row="0" Grid.Column="0">

                                <Label Text="{Binding IdAgendamento, StringFormat='Agendamento: {0}'}"
                                        FontSize="18"
                                        FontAttributes="Bold"
                                        TextColor="#007bff"/>

                            </StackLayout>
                            <Label Grid.Row="0" Grid.Column="1"
                                       Text="{Binding DescSituacao}"
                                       FontAttributes="Bold"
                                       HorizontalOptions="End"
                                       VerticalOptions="Center">
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Setter Property="TextColor" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger TargetType="Label"
                                                             Binding="{Binding DescSituacao}"
                                                             Value="Aberto">
                                                <Setter Property="TextColor" Value="Blue"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label"
                                                             Binding="{Binding DescSituacao}"
                                                             Value="Cancelado">
                                                <Setter Property="TextColor" Value="Red"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label"
                                                             Binding="{Binding DescSituacao}"
                                                             Value="Finalizado">
                                                <Setter Property="TextColor" Value="LightGreen"/>
                                            </DataTrigger>
                                        </Style.Triggers>

                                    </Style>
                                </Label.Style>
                            </Label>
                            <StackLayout Grid.Row="2" Grid.ColumnSpan="2" Margin="0, 5, 0, 0">
                                <Label Text="{Binding DescServico, StringFormat='Serviço: {0}'}"
                                    FontSize="14"
                                    Grid.Row="1" Grid.Column="0"
                                    TextColor="#BBBBBB"/>
                                <Label Text="{Binding NomeBarbeiro, StringFormat='Barbeiro: {0}'}"
                                    FontSize="14"
                                    Grid.Row="1" Grid.Column="0"
                                    TextColor="#BBBBBB"/>
                                <Label Text="{Binding DataHora, StringFormat='Data e Hora: {0:dd/MM/yyyy HH:mm}'}"
                                       FontSize="14"
                                       TextColor="#CCCCCC"/>
                                <Label Text="{Binding NomeUsuario, StringFormat='Cliente: {0}'}"
                                       FontSize="14"
                                       TextColor="#CCCCCC"/>

                            </StackLayout>

                            <HorizontalStackLayout  Grid.Row="2" Grid.ColumnSpan="2" Margin="0, 5, 0, 0" HorizontalOptions="End">
                                <Button Text="Cancelar"
                                        TextColor="Red"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ConsultarAgendamentoViewModel}}, Path=CancelarAgendamentoCommand}"
                                        CommandParameter="{Binding .}"
                                        HeightRequest="13"
                                        WidthRequest="100"/>
                            </HorizontalStackLayout>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>