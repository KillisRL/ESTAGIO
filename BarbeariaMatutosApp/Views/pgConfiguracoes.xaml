<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarbeariaMatutosApp.Views.pgConfiguracoes"
             Title="Configurações">
    <ScrollView>
        <Frame HeightRequest="205" VerticalOptions="Start">

            <StackLayout>
                <HorizontalStackLayout>
                <StackLayout HorizontalOptions="Start">
                <Border StrokeShape="RoundRectangle 50"
                        StrokeThickness="0"
                        HeightRequest="100"
                        WidthRequest="100"
                        HorizontalOptions="Center"
                        Margin="0,20,0,0">

                        <Image Source="barber.jpeg" 
                           Aspect="AspectFill"
                           HeightRequest="100" 
                           WidthRequest="100"/>
                    </Border>

                </StackLayout>
                    <VerticalStackLayout>
                    <VerticalStackLayout VerticalOptions="Center" Margin="20,30,0,0">
                        <Label Text="Olá,"/>
                    </VerticalStackLayout>
  
                    <VerticalStackLayout VerticalOptions="Center" Margin="20,10,0,0">
                        <Label Text="{Binding}"/>
                    </VerticalStackLayout>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
                <StackLayout Margin="0,0,0,200">
                    <ImageButton Source="lapis.png"
                         WidthRequest="20"
                         Command="{Binding AbrirTelaAlteracaoCommand}"
                         HeightRequest="20"
                         CornerRadius="30"
                         HorizontalOptions="End"
                         Aspect="AspectFill"/>  
                </StackLayout>
            </StackLayout>

        </Frame>
    </ScrollView>
</ContentPage>